# Example environment variables for St Mary’s House Dental Care

# Branding & base URL
NEXT_PUBLIC_APP_NAME=St Mary’s House Dental Care
NEXT_PUBLIC_BASE_URL=https://web-chat-with-app-in-future.vercel.app
NEXT_PUBLIC_BRAND_PRIMARY=#C2185B
NEXT_PUBLIC_BRAND_SECONDARY=#40C4B4
NEXT_PUBLIC_ACCENT_GOLD=#D4AF37
NEXT_PUBLIC_NEUTRAL=#F7F7F9

# Node and build environment
NODE_ENV=production

# Public APIs and integrations (safe for client-side)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# AI & Chatbot keys (server-side, never expose to client)
OPENAI_API_KEY=
HEYGEN_API_KEY=
SYNTHESIA_API_KEY=

# Appointment and practice management
ZAPIER_WEBHOOK_APPTS=
DENTALLY_ZAPIER_HOOK=
TABEO_API_KEY=
HEIDI_HEALTH_API_KEY=

# Payments & finance
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Notifications
TWILIO_SMS_KEY=
TWILIO_EMAIL_KEY=

# Authentication scaffolding (for future patient app)
AUTH_PROVIDER=jwt
JWT_SECRET=
NEXTAUTH_URL=https://web-chat-with-app-in-future.vercel.app