# Chatbot & AI Environment Variables

# Feature Flags
NEXT_PUBLIC_ENABLE_CHATBOT=true
NEXT_PUBLIC_ENABLE_VOICE=false
NEXT_PUBLIC_ENABLE_AVATAR=false
NEXT_PUBLIC_ENABLE_MEMORY=true
NEXT_PUBLIC_ENABLE_GUARDRAILS=true

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo
OPENAI_MAX_TOKENS=800
OPENAI_TEMPERATURE=0.7

# Avatar Services (optional)
HEYGEN_API_KEY=your-heygen-api-key-here
HEYGEN_AVATAR_ID=your-avatar-id
SYNTHESIA_API_KEY=your-synthesia-api-key-here
SYNTHESIA_AVATAR_ID=your-avatar-id

# Voice Services (optional)
NEXT_PUBLIC_ENABLE_SPEECH_RECOGNITION=true
NEXT_PUBLIC_ENABLE_TEXT_TO_SPEECH=true
NEXT_PUBLIC_VOICE_LANGUAGE=en-GB

# Integration Settings
ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/your-webhook
DENTALLY_API_BASE=https://api.dentally.co
DENTALLY_API_KEY=your-dentally-api-key
DENTALLY_PRACTICE_ID=your-practice-id

# Memory & Context
CONVERSATION_MEMORY_TTL=3600
MAX_CONVERSATION_LENGTH=50
ENABLE_CONTEXT_PERSISTENCE=true

# Safety & Moderation
ENABLE_CONTENT_FILTERING=true
ENABLE_MEDICAL_DISCLAIMERS=true
MAX_RESPONSE_LENGTH=1000
RATE_LIMIT_REQUESTS_PER_MINUTE=30

# GDPR Compliance
ENABLE_CHAT_CONSENT=true
CONVERSATION_RETENTION_DAYS=30
ENABLE_DATA_EXPORT=true
ENABLE_DATA_DELETION=true

# Practice Information
NEXT_PUBLIC_PRACTICE_NAME="St Mary's House Dental Care"
NEXT_PUBLIC_PRACTICE_PHONE="01273 453109"
NEXT_PUBLIC_PRACTICE_EMAIL="info@stmaryshousedental.co.uk"
NEXT_PUBLIC_PRACTICE_ADDRESS="Shoreham-by-Sea, West Sussex"

# Emergency Settings
EMERGENCY_PHONE="01273 453109"
EMERGENCY_EMAIL="emergency@stmaryshousedental.co.uk"
ENABLE_EMERGENCY_ROUTING=true

