# 3D/AR/VR Environment Variables

# Feature Flags
NEXT_PUBLIC_ENABLE_3D_VIEWER=true
NEXT_PUBLIC_ENABLE_AR_VIEWER=true
NEXT_PUBLIC_ENABLE_VR_TOUR=false
NEXT_PUBLIC_ENABLE_WEBXR=true

# 3D Model Settings
NEXT_PUBLIC_MODEL_BASE_PATH="/models"
NEXT_PUBLIC_DEFAULT_TOOTH_MODEL="/models/tooth-sample.glb"
NEXT_PUBLIC_VENEER_MODEL="/models/veneer.glb"
NEXT_PUBLIC_IMPLANT_MODEL="/models/implant.glb"
NEXT_PUBLIC_CROWN_MODEL="/models/crown.glb"

# Performance Settings
NEXT_PUBLIC_3D_QUALITY="high"
NEXT_PUBLIC_ENABLE_SHADOWS=true
NEXT_PUBLIC_ENABLE_REFLECTIONS=true
NEXT_PUBLIC_MAX_TEXTURE_SIZE=1024

# AR/VR Settings
NEXT_PUBLIC_AR_SCALE_FACTOR=1.0
NEXT_PUBLIC_VR_MOVEMENT_SPEED=1.0
NEXT_PUBLIC_ENABLE_HAND_TRACKING=false

# Model Viewer CDN
NEXT_PUBLIC_MODEL_VIEWER_CDN="https://unpkg.com/@google/model-viewer/dist/model-viewer.min.js"

# Debug Settings
NEXT_PUBLIC_DEBUG_3D=false
NEXT_PUBLIC_SHOW_WIREFRAME=false
NEXT_PUBLIC_SHOW_STATS=false

